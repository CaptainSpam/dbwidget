<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight">
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MainText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_main</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:fontFeatureSettings">tnum</item>
        <item name="android:shadowColor">@color/textShadow</item>
        <item name="android:shadowDx">4.0</item>
        <item name="android:shadowDy">4.0</item>
        <item name="android:shadowRadius">1.0</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="CurrentDonationsText" parent="MainText">
        <item name="android:textSize">@dimen/text_currentdonations</item>
        <item name="android:fontFamily">@font/montserrat_semibold</item>
    </style>

    <style name="ErrorText" parent="MainText">
        <item name="android:textSize">@dimen/text_errorfull</item>
    </style>

    <style name="StatusText" parent="MainText">
        <item name="android:textSize">@dimen/text_status</item>
    </style>

    <style name="NonFreshErrorText" parent="MainText">
        <item name="android:textSize">@dimen/text_nonfresh</item>
    </style>

    <style name="ConfigTitle">
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textSize">@dimen/text_config_title</item>
        <item name="android:fontFamily">@font/montserrat_semibold</item>
    </style>

    <style name="ConfigCreateButton">
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textSize">@dimen/text_config_create</item>
        <item name="android:fontFamily">@font/montserrat_semibold</item>
    </style>

    <style name="ConfigSetting">
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textSize">@dimen/text_config_setting</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>
</resources>
